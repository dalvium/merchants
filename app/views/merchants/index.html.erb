<p id="notice"><%= notice %></p>

<h1 class="index-header">Merchants</h1>
<h6 class="filter-header">Filter by name</h6>
<%= form_tag url_for(action: :index), method: :get, class: 'form-inline' do %>
  <div class="filter-field">
    <%= text_field_tag :name_filter %>
  </div>
  <div>
    <button type="submit" class="btn btn-primary">Filter</button>
  </div>
  <br>
<% end %>
<table class="table">
  <thead>
    <tr>
      <th>Email</th>
      <th>Name</th>
      <th>City</th>
      <th>Street</th>
      <th>Country code</th>
      <th>Phone number</th>
      <th>Website</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @merchants.each do |merchant| %>
      <tr>
        <td><%= merchant.email %></td>
        <td><%= merchant.name %></td>
        <td><%= merchant.city %></td>
        <td><%= merchant.street %></td>
        <td><%= merchant.country_code %></td>
        <td><%= merchant.phone_number %></td>
        <td><%= merchant.website %></td>
        <td><%= link_to 'Show', merchant %></td>
        <td><%= link_to 'Edit', edit_merchant_path(merchant) %></td>
        <td><%= link_to 'Destroy', merchant, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<div class="new-merchant">
  <%= link_to 'New Merchant', new_merchant_path %>
</div>
